  <select id="gender" name="gender" required aria-required="true" onchange="validateSelection()">
    <option value="" disabled selected hidden>Seleccionar genero</option>
    <option value="Hombre">Hombre</option>
    <option value="Mujer">Mujer</option>
    <option value="No binario">No binario</option>
    <option value="Prefiero no decirlo">Prefiero no decirlo</option>
    <option value="Otro">Otro</option>
  </select>

  <!-- Display feedback -->
  <div id="feedback"></div>

  <script>
    // JavaScript function to validate and provide feedback
    function validateSelection() {
      var x = document.getElementById("gender").value;
      var feedback = document.getElementById("feedback");

      if (x === "Otro") {
        feedback.innerHTML = "Has seleccionado 'Otro'. Por favor, específique en el siguiente campo el genero al cual se identifica:";

        feedback.innerHTML += '<input type="text" id="otherGender" name="otherGender">';
      } else {
        feedback.innerHTML = "Has seleccionado: " + x;
      }
    }
  </script>


