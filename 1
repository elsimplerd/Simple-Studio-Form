<script>
    const btnVerMas = document.getElementById("btnVerMas");
    const btnVerMenos = document.getElementById("btnVerMenos");
    const masIdiomas = document.getElementById("masIdiomas");

    btnVerMas.addEventListener("click", () => {
        masIdiomas.style.display = "block";
        btnVerMas.style.display = "none";
        btnVerMenos.style.display = "block";
    });

    btnVerMenos.addEventListener("click", () => {
        masIdiomas.style.display = "none";
        btnVerMas.style.display = "block";
        btnVerMenos.style.display = "none";
    });
</script>

