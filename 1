<!-- JavaScript -->
<script>
function mostrarCampo() {
    var checkBox = document.getElementById("Otra");
    var campoOculto = document.getElementById("campoOculto");
    if (checkBox.checked == true){
        campoOculto.style.display = "block";
    } else {
        campoOculto.style.display = "none";
    }
}
</script>




